---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import Stats from '~/components/widgets/Stats.astro';
import Brands from '~/components/widgets/Brands.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Perth Artifactory',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero  ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Become a member',
        href: '/pricing',
        icon: 'tabler:users',
      },
      {
        variant: 'secondary',
        text: 'Learn more',
        href: '#features',
      },
    ]}
    image={{ src: '~/assets/images/hero.png', alt: 'Perth Artifactory' }}
  >
    <Fragment slot="title">
      Make something incredible
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">The Perth Artifactory</span> is a community workshop and makerspace in Osborne Park, Western Australia.</span>
    </Fragment>
  </Hero>


  <!-- What we offer  *************** -->

  <Features
    id="features"
    tagline="What we offer"
    title="What will you find at the Artifactory?"
    subtitle="We are dedicated to fostering creativity, accessibility, and wellbeing for people of all backgrounds and skill levels. We aim to equip our community with new skills, nurture their passions, and promote happiness through unbridled invention."
    items={[
      {
        title: 'Dedicated project area',
        description:
          'The heart of the Artifactory where you can work on your latest ideas and get inspired by what others are working on.',
        icon: 'tabler:hammer',
      },
      {
        title: 'Specialised tools',
        description:
          'We have a wide range of hard to find tools including laser cutters, 3D printers, CNC machines, lathes, mills, and more.',
        icon: 'tabler:settings',
      },
      {
        title: 'Social area',
        description:
          'The home of our regular social events where you can take a break from making and chat with other members. You can watch TV, listen to music, or play one of our dozens of board games.',
        icon: 'tabler:device-gamepad-2',
      },
      {
        title: 'Quiet labs',
        description:
          'If you want a calmer environment to focus, our computer and electronics labs are the perfect place.',
        icon: 'tabler:device-desktop',
      },
      {
        title: 'Outdoor spaces',
        description:
          'For the messier projects, or simply to sit with friends and get a bit of sunshine.',
        icon: 'tabler:sun-high',
      },
      {
        title: 'Rehearsal Room',
        description:
          'Treated room with PA and limited backline, great for rehearsals, recording, and podcasts. Suits up to a four/five piece band.',
        icon: 'tabler:music',
      },
    ]}
  />



  <Content
    isReversed
    id="slack"
    tagline="Connect with us"
    title="Join our online community"
    subtitle="Slack is our online community platform where members and non-members alike chat and socialise."
    callToAction={{
      text: 'Join our Slack',
      href: 'https://perart.io/slack',
      icon: 'tabler:brand-slack',}}
    items={[
      {
        title: 'PC and mobile',
        description:
          "Available on all major platforms, including PC, Android, and iOS.",
        icon: 'tabler:devices',
      },
      {
        title: 'Have a question?',
        description:
          "Ask away! By joining our Slack you gain access to everyone in our community. Even past members that have since moved interstate and overseas are still active in our community.",
        icon: 'tabler:zoom-question',
      },
      {
        title: 'Find out what people are working on',
        description:
          "Hop into one of our topic specific channels to see what other people are doing in your favourite hobby. Can't find an appropriate channel? You can make your own!",
        icon: 'tabler:cloud-star',
      },
      {
        title: 'Communicate with others',
        description:
          "If you need to get in contact with another member of the community you can simply send them a direct message and not have to worry about bumping into them at the Artifactory.",
        icon: 'tabler:messages',
      },
    ]}
    image={{
      src: '~/assets/images/slack.png',
      alt: 'Perth Artifactory Slack',
    }}
  >
  </Content>

  <!-- Stats Widget ****************** -->

  <Stats
    id="stats"
    title="Statistics about us"
    stats={[
      { title: 'Active Members', amount: '80+' },
      { title: 'Sponsored Members', amount: '5+' },
      { title: 'Monthly Events', amount: '15+' },
      { title: 'Monthly Attendees', amount: '300+' },
    ]}
  />

  <!-- Map ******************* -->

  <div style="overflow: hidden" class="mx-auto max-w-5xl w-11/12 rounded-lg bg-neutral-500 shadow-lg">
    <iframe src="https://snazzymaps.com/embed/517349" width="100%" height="600px" style="border:none;"></iframe>
  </div>

  <!-- CallToAction Widget *********** -->

  <CallToAction
    title="Join our community today!"
    actions={[
      {
        variant: 'primary',
        text: 'Become a member',
        href: '/pricing',
        icon: 'tabler:users'
      },
      {
        variant: 'secondary',
        text: 'Plan your first visit',
        href: '/first_visit',
      },
    ]}
  />

  <!-- Brands ******************* -->

  <Brands
    subtitle="Our sponsors and partners"
    logos={[
      { icon: 'altronics', href: 'https://www.altronics.com.au/', alt: 'Altronics' },
      { icon: 'aussiebb', href: 'https://www.aussiebroadband.com.au/', alt: 'Aussie Broadband' },
      { icon: 'google', href: 'https://www.google.com.au/nonprofits/', alt: 'Google for Nonprofits' },
      { icon: 'lotterywest', href: 'https://www.lotterywest.wa.gov.au/', alt: 'Lotterywest' },
      { icon: 'mulford', href: 'https://www.mulfordplastics.com/', alt: 'Mulford Plastics' },
      { icon: 'ndis', href: 'https://www.ndis.gov.au/', alt: 'National Disability Insurance Scheme' },
      { icon: 'pcbway', href: 'https://www.pcbway.com/', alt: 'PCBWay PCB Manufacturer' },
      { icon: 'prusa', href: 'https://www.prusa3d.com/', alt: 'Prusa 3D Printers' },
      { icon: 'stjohn', href: 'https://stjohnwa.com.au/', alt: 'St John WA' },
      { icon: 'webinabox', href: 'https://www.webinabox.net.au/', alt: 'Web in a Box' },
      { icon: 'wott', href: 'https://womenonthetools.com.au/', alt: 'Women On The Tools' },
      ]}
    {/* images={[]} */}
  />

</Layout>
